{
  "name": "matrix-config",
  "version": "4.9.32",
  "description": "",
  "main": "build.js",
  "scripts": {
    "build": "webpack --mode production && node build-for-netlify.js",
    "build:dev": "webpack --mode development",
    "build:netlify": "webpack --mode production && node build-for-netlify.js",
    "start": "webpack-dev-server --open",
    "version:patch": "npm version patch -m 'Bump version to %s [skip ci]'",
    "prebuild": "echo 'Starting build process...'",
    "postbuild": "echo 'Build completed successfully'",
    "predeploy": "echo 'Starting deployment process...' && git status --porcelain",
    "deploy": "npm run build && git add dist/ && (git diff --cached --quiet || git commit -m 'Update build files [skip ci]') && npm run version:patch && git push --follow-tags && gh release create v$(node -p \"require('./package.json').version\") --latest --title \"Release v$(node -p \"require('./package.json').version\")\" --notes \"Automated release\"",
    "deploy:test": "npm run build && git add dist/ && echo 'Files staged for commit:' && git diff --cached --name-only && echo 'Would commit build files and create release...'",
    "postdeploy": "echo 'Deployment completed successfully!'",
    "deploy:webflow": "npm run build && node deploy-netlify.js",
    "webflow:deploy": "node deploy-netlify.js",
    "deploy:github": "npm run build && node deploy-github-pages.js",
    "github:deploy": "node deploy-github-pages.js",
    "webflow:test": "node test-webflow-api.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.28.3",
    "@soda/friendly-errors-webpack-plugin": "^1.8.1",
    "babel-loader": "^10.0.0",
    "browser-sync": "^3.0.4",
    "copy-webpack-plugin": "^13.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "gh-pages": "^6.3.0",
    "live-server": "^1.2.2",
    "webpack": "^5.102.0",
    "webpack-dev-middleware": "^7.4.5",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@babel/types": "^7.28.4",
    "@finsweet/attributes-cmscore": "^1.13.1",
    "jspdf": "^3.0.3",
    "pdfkit": "^0.17.2",
    "webfontloader": "^1.6.28",
    "webpack-cli": "^6.0.1"
  }
}
